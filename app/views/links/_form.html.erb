<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
  <div id="errorExplanation">
    <h2> <%= pluralize(@link.errors.count, "error") %> 
         prohibited this link from being saved:
    </h2>
    <ul>
    <% @link.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<table>
  <tr class="field">
    <td><%= f.label :info %></td>
    <td><%= f.text_field :info %></td>
  </tr>
  <tr class="field">
    <td><%= f.label :link %></td>
    <td><%= f.text_field :link %></td>
  </tr>
</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
